<p id="notice"><%= notice %></p>

<h1>Reciprocity</h1>

<table>
  <thead>
    <tr>
      <td>Email</td>
      <% @activities.each do |activity| %>
        <td><%= activity.title %></td>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if current_user && user.id != @current_user.id %>
        <tr>
          <td><%= user.email %></td>
          <% @activities.each do |activity| %>
            <td><%= @users_to_activities[user.id][activity.id] %></td>
          <% end %>
        </tr>
      <% end %>
    <% end %>

  </tbody>
</table>

