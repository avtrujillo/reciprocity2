<p id="notice"><%= notice %></p>

<h1>Connection Requests</h1>

<table>
  <thead>
    <tr>
      <th>Requester</th>
      <th>Requestee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @connection_requests.each do |connection_request| %>
      <tr>
        <td><%= connection_request.requester %></td>
        <td><%= connection_request.requestee %></td>
        <td><%= link_to 'Show', connection_request %></td>
        <td><%= link_to 'Edit', edit_connection_request_path(connection_request) %></td>
        <td><%= link_to 'Destroy', connection_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Connection Request', new_connection_request_path %>
