<h2>Log in</h2>

<%= form_with(url: sessions_path, method: 'post') do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <%# if devise_mapping.rememberable? %>
  <%# if Rails.application.config.sorcery.submodules.include?(:remember_me) %>
    <%#https://github.com/NoamB/sorcery/wiki/Remember-Me %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <%# end -%>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<p><%= link_to 'Forgot your password?', 'password_resets/new' %></p>

<%#= render "devise/shared/links" %>
